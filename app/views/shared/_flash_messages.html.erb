<% if flash.any? %>
    <div class="container">
        <% flash.each do |key, value| %>
            <div class="<%= resolve_flash key %>">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= value %>
            </div>
        <% end %>
    </div>
<% end %>
