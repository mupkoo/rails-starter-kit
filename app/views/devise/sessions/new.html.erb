<% content_for(:page_title) { 'Sign in' } %>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 devise-box">
        <h2>Sign in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean, wrapper: :vertical_boolean if devise_mapping.rememberable? %>

            <%= f.button :submit, "Sign in", class: 'btn-primary' %>

        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>
